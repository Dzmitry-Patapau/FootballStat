@model IEnumerable<FootballStats.Data.Identity.TeamStatistics>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Team statistics</h1>

<p>
    <a asp-action="Create">Add a team to the league</a>
</p>
<table class="table table-striped table-bordered">
    <thead style="background-color: #007bff; color: white; font-weight: bold;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.League)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchesPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wins)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Draws)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Losses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoalsScored)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoalsConceded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>


            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="background-color: #f2f2f2;">
                <td>
                    @Html.DisplayFor(modelItem => item.League.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchesPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wins)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Draws)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Losses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalsScored)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalsConceded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.TeamStatID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TeamStatID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TeamStatID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
