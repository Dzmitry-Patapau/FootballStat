@model FootballStats.Models.MatchDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Match</h4>
    <hr />

    <div class="border p-3 text-center">
        <h3 class="mb-4">@Model.Match.League.Name</h3>

        <div class="row justify-content-center mb-4">
            <div class="col">
                <img src="@Model.Match.HomeTeam.LogoStadium" class="img-fluid" alt="Stadium Logo">
            </div>
            <div class="col">
                <h4>Round @Model.Match.MatchRound</h4>
                <h4>Data @Model.Match.MatchDateTime</h4>
                <h4>Stadium @Model.Match.HomeTeam.Stadium</h4>
                <h4>Referee: @Model.Match.Referee.Name</h4>
            </div>
        </div>
    </div>



    <table class="table table-striped table-bordered">
        <thead style="background-color: #f2f2f2; font-weight: bold;">
            <tr>
                <th><img src="@Model.Match.HomeTeam.Logo" class="logo" width="50" height="50">   @Model.Match.HomeTeam.Name</th>
                <th>@Model.Match.HomeTeamScore</th>
                <th>@Model.Match.AwayTeamScore</th>
                <th><img src="@Model.Match.AwayTeam.Logo" class="logo" width="50" height="50">   @Model.Match.AwayTeam.Name</th>
            </tr>
        </thead>
        <tbody>
            <tr style="background-color: #007bff;">
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr style="background-color: #f2f2f2;">
                <td><img src="/image/corner.png" class="logo" width="28" height="50"></td>
                <td>@Html.DisplayFor(model => Model.MatchStatistics.CornersHome)</td>
                <td>@Html.DisplayFor(model => Model.MatchStatistics.CornersAway)</td>
                <td><img src="/image/corner.png" class="logo" width="28" height="50"></td>
            </tr>
            <tr style="background-color: #f2f2f2;">
                <td><img src="/image/yellow.png" class="logo" width="28" height="50"></td>
                <td>@Html.DisplayFor(model => Model.MatchStatistics.YellowCardsHome)</td>
                <td>@Html.DisplayFor(model => Model.MatchStatistics.YellowCardsAway)</td>
                <td><img src="/image/yellow.png" class="logo" width="28" height="50"></td>
            </tr>
            <tr style="background-color: #f2f2f2;">
                <td><img src="/image/red.png" class="logo" width="28" height="50"></td>
                <td>@Html.DisplayFor(model => Model.MatchStatistics.RedCardsHome)</td>
                <td>@Html.DisplayFor(model => Model.MatchStatistics.RedCardsAway)</td>
                <td><img src="/image/red.png" class="logo" width="28" height="50"></td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <a href="@Context.Request.Headers["Referer"]">Back</a>
</div>
