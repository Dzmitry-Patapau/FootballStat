@using FootballStats.Components;
@model IEnumerable<FootballStats.Data.Identity.Referee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Referee</h1>

<table class="table table-striped table-bordered">
    <thead style="background-color: #007bff; color: white; font-weight: bold;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color: #f2f2f2;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Details", new { controller = "Referees", id = item.RefereeID })'">Details</button>
                </td>
            </tr>
        }
    </tbody>
</table>

