@model IEnumerable<FootballStats.Data.Identity.Team>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Teams</h1>

<table class="table table-striped table-bordered">
    <thead style="background-color: #007bff; color: white; font-weight: bold;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stadium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogoStadium)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color: #f2f2f2;">
                <td class="text-center align-middle">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center align-middle">
                    <img src="@Url.Content(item.Logo)" alt="Logo @item.Name" width="100" height="100" class="img-thumbnail" />
                </td>
                <td class="text-center align-middle">
                    @Html.DisplayFor(modelItem => item.Stadium)
                </td>
                <td class="text-center align-middle">
                    <img src="@Url.Content(item.LogoStadium)" alt="Logo @item.Stadium" width="200" height="120" class="img-thumbnail" />
                </td>
                <td class="text-center align-middle">
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Details", new { controller = "Teams", id = item.TeamID })'">Details</button>
                </td>
            </tr>
        }
    </tbody>
</table>
