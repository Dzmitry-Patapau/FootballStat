@model IEnumerable<FootballStats.Data.Identity.League>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Leagues</h1>

<p>
    <a asp-action="Create">Create new league</a>
</p>
<table class="table table-striped table-bordered">
    <thead style="background-color: #007bff; color: white; font-weight: bold;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="background-color: #f2f2f2;">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LeagueID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LeagueID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LeagueID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
