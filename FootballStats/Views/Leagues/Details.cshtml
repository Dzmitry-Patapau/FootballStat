@model FootballStats.Models.LeagueDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>League</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.League.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.League.Name)
        </dd>
        <a asp-action="Edit" asp-route-id="@Model?.League.LeagueID">Edit</a> 
        <h5>Comands in leagua</h5>
       @*  @foreach(var item in Model.Teams)
        {
            <dt>
                @Html.DisplayNameFor(model => item.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => item.Name)
            </dd>
        } *@
        <table class="table table-striped table-bordered">
            <thead style="background-color: #007bff; color: white; font-weight: bold;">
                <tr>
                    <th>Name</th>
                    <th>Actions</th> <!-- Пустая ячейка для выравнивания -->
                </tr>
            </thead>
            <tbody>
                    @foreach (var item in Model.Teams)
                    {
                    <tr style="background-color: #f2f2f2;">
                        <td>@Html.DisplayFor(model => item.Name)</td>
                        <td><a asp-controller="teams" asp-action="Details" asp-route-id="@item.TeamID">Details about team</a></td>
                        </tr>
                    }
            </tbody>
        </table>


    </dl>

    <h5>Matches for league</h5>
    <table class="table table-striped table-bordered">
        <thead style="background-color: #007bff; color: white; font-weight: bold;">
            <tr>
                <th>League</th>
                <th>Match Round</th>
                <th>Match DateTime</th>
                <th>Home Team</th>
                <th>Home Score</th>
                <th>Away Score</th>
                <th>Away Team</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Matches)
            {
                <tr style="background-color: #f2f2f2;">
                    <td>@Html.DisplayFor(model => item.League.Name)</td>
                    <td>@Html.DisplayFor(model => item.MatchRound)</td>
                    <td>@Html.DisplayFor(model => item.MatchDateTime)</td>
                    <td>@Html.DisplayFor(model => item.HomeTeam.Name)</td>
                    <td>@Html.DisplayFor(model => item.HomeTeamScore)</td>
                    <td>@Html.DisplayFor(model => item.AwayTeamScore)</td>
                    <td>@Html.DisplayFor(model => item.AwayTeam.Name)</td>
                    <td><a asp-controller="Matches" asp-action="details" asp-route-id="@item.MatchID">About match</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
