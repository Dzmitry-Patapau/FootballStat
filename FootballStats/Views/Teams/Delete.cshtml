@model FootballStats.Models.TeamDeleteViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Team.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Logo)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content(Model.Team.Logo)" alt="Logo @Model.Team.Name" width="50" height="50" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Stadium)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Team.Stadium)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Team.LogoStadium)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content(Model.Team.LogoStadium)" alt="Logo @Model.Team.Stadium" width="200" height="120" />
        </dd>
    </dl>
    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="text-danger">
            @Model.Error
        </div>
    }
    <form asp-action="Delete">
        <input type="hidden" asp-for="Team.TeamID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
