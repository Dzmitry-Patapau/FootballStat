@using FootballStats.Components;
@model FootballStats.Models.TeamDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />


    <table class="table table-striped table-bordered">
        <thead style="background-color: #007bff; color: white; font-weight: bold;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Team.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Team.Logo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Team.Stadium)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Team.LogoStadium)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr style="background-color: #f2f2f2;">
                    <td class="text-center align-middle">
                        @Html.DisplayFor(modelItem => Model.Team.Name)
                    </td>
                    <td class="text-center align-middle">
                        <img src="@Url.Content(Model.Team.Logo)" alt="Logo @Model.Team.Name" width="100" height="100" class="img-thumbnail" />
                    </td>
                    <td class="text-center align-middle">
                        @Html.DisplayFor(modelItem => Model.Team.Stadium)
                    </td>
                    <td class="text-center align-middle">
                        <img src="@Url.Content(Model.Team.LogoStadium)" alt="Logo @Model.Team.Stadium" width="300" height="180" class="img-thumbnail" />
                    </td>
                </tr>
        </tbody>
    </table>
    </br>

    <h5>Leagues for team</h5>
    @foreach (var item in Model.Leagues)
    {
        <dt>
            @Html.DisplayNameFor(model => item.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => item.Name)
        </dd>
    }

    <component type="typeof(AllMatch)" render-mode="ServerPrerendered" param-TeamId="@Model.Team.TeamID" />
    @section Scripts{
        <script src="_framework/blazor.server.js"></script>
    }
    
